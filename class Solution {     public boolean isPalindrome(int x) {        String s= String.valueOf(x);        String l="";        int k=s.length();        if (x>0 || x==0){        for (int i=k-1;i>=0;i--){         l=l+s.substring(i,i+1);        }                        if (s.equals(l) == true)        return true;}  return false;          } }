class Solution {
    public boolean isPalindrome(int x) {
       String s= String.valueOf(x);
       String l="";
       int k=s.length();
       if (x>0 || x==0){
       for (int i=k-1;i>=0;i--){
        l=l+s.substring(i,i+1);
       }
       
       
       if (s.equals(l) == true)
       return true;}

return false;
         }
}
